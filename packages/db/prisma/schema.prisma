generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Match {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  status    MatchStatus @default(OPEN)

  mint      String   // MALTCOIN mint address
  stake     Int

  creatorPubkey String
  joinerPubkey  String?
  winnerPubkey  String?

  // tx signatures
  creatorDepositTx String?
  joinerDepositTx  String?
  settleTx         String?

  // server coinflip
  serverSeed String?
  serverFlip Int? // 0/1
}

enum MatchStatus {
  OPEN
  LOCKED
  SETTLED
  CANCELED
}
